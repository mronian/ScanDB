function randomizeArray( myArray )
{
  var i = myArray.length;
  while ( i-- )
  {
    var j = Math.floor( Math.random() * ( i + 1 ) );
    var tempi = myArray[i];
    var tempj = myArray[j];
    myArray[i] = tempj;
    myArray[j] = tempi;
  }
}

var rgBanners = new Array ( "images/banner01.jpg",
       "images/banner02.jpg",
