function create() {
        this.width = ''
        this.height = ''
        this.src = ''
        this.href = ''
        this.border = ''
        this.mouseover = ''
        this.sponsor = ''
}
ads = new Array()
for(var i=1; i<=5; i++) { ads[i] = new create() }

