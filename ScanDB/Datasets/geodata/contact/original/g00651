var randomNum = Math.random() + ''
randomNum = parseInt(randomNum.charAt(5))
if(randomNum >5) {
        randomNum = randomNum - 5
}
else if(randomNum==0) {
        randomNum = randomNum + 5
}
randomNum += ""

var image = ads[randomNum]
var ad = ""
ad += '<a href="' + image.href + '" \n'
ad += 'onMouseOver="self.status=\'' + image.mouseover + '\'\;return true" \n'
ad += 'onMouseOut="self.status=\'\'" target=_blank> \n'
ad += '<img src="' + image.src + '" width=' + image.width
ad += '\n height=' + image.height + ' border=' + image.border
ad += '</a>'
</script>

<script language=javascript>
function image_swap(imageUrl, image_name) {
	if (document.images) {
		document.images[image_name].src =
'../../_images/' + image_name + '_b.jpg';
	}
}

function image_restore(imageUrl, image_name) {
	if (document.images) {		
		document.images[image_name].src =
'../../_images/' + image_name + '.jpg';
	}	
}
</script>	



