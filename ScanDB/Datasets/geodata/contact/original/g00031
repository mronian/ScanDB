function popWin(url, width, height) {
	var Win = window.open(url,'nspopup','width=' + width +',height=' + height + ',toolbar=no,location=no,directories=no,status=yes,menubar=no,scrollbars=no,resizable=yes,copyhistory=no,left=10,top=10' );
}

function printWin(url, width, height) {
	var Win = window.open(url,'nsprint','width=' + width +',height=' + height + ',toolbar=yes,location=no,directories=no,status=yes,menubar=yes,scrollbars=yes,resizable=yes,copyhistory=no,left=10,top=10' );
}

function remoteWin(url)
{
	opener.location.href = url;
	opener.focus ();
	self.blur ();
}

function changePage(userChoice) {
	var newPage = userChoice.options[userChoice.selectedIndex].value ;
	if (newPage!=" ") {
		document.location.href = newPage;
	}
}
</script>

