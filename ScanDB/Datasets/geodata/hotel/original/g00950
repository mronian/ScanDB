<script language="javascript">
function closeCalendar(io){}

function LTrim(str)
{
       var whitespace = new String(" \t\n\r");
       var s = new String(str);
       if (whitespace.indexOf(s.charAt(0)) != -1) {
            var j=0, i = s.length;
            while (j < i && whitespace.indexOf(s.charAt(j)) != -1)
                   j++;
            s = s.substring(j, i);
       }
       return s;
}
function RTrim(str)
{
       var whitespace = new String(" \t\n\r");
       var s = new String(str);
       if (whitespace.indexOf(s.charAt(s.length-1)) != -1) {
           var i = s.length - 1;       
           while (i >= 0 && whitespace.indexOf(s.charAt(i)) != -1)
                  i--;
           s = s.substring(0, i+1);
       }

       return s;
}
function Trim(str)
{ return RTrim(LTrim(str)); }
//-------------------------------------------------------------------------
function OptionCat(){  
	i = form1.IssueCategory.selectedIndex
    if (i!=0){
	   theCat = form1.IssueCategory[i].text
	   document.forms.form1.Category1.value = theCat
    }	   
    else { document.forms.form1.Category1.value = '' }
}

function OptionTyp(){  
	i = form1.IssueType.selectedIndex
    if (i!=0){
	   theTyp = form1.IssueType[i].text
	   document.forms.form1.Type1.value = theTyp
    }	   
    else { document.forms.form1.Type1.value = '' }
}

function HideBlock(obj)
     { document.getElementById(obj).style.display='none'; }
function ShowBlock(obj)
     { document.getElementById(obj).style.display=''; }
	 
</script>




